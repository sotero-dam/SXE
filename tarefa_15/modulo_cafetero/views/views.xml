<odoo>
    <data>
        <record id="action_cafetero_sueno" model="ir.actions.act_window">
            <field name="name">Cálculo de Bebidas</field>
            <field name="res_model">cafetero.sueno</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crea un novo rexistro para calcular a bebida recomendada.
                </p>
            </field>
        </record>

        <record id="view_cafetero_sueno_form" model="ir.ui.view">
            <field name="name">cafetero.sueno.form</field>
            <field name="model">cafetero.sueno</field>
            <field name="arch" type="xml">
                <form string="Nivel de Sono">
                    <sheet>
                        <group>
                            <field name="alumno"/>
                            <field name="nivel_sueno"/>
                            <field name="bebida_recomendada" readonly="1"/> 
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_cafetero_sueno_list" model="ir.ui.view">
            <field name="name">cafetero.sueno.list</field>
            <field name="model">cafetero.sueno</field>
            <field name="arch" type="xml">
                <list string="Recomendacións de Bebida">
                    <field name="alumno"/>
                    <field name="nivel_sueno"/>
                    <field name="bebida_recomendada"/>
                </list>
            </field>
        </record>
        
        <menuitem id="menu_cafetero_root" name="Cafetería" sequence="10"/>

        <menuitem id="menu_calculo_bebidas" 
                  name="Calcular Bebida" 
                  parent="menu_cafetero_root"
                  action="action_cafetero_sueno"
                  sequence="10"/>

    </data>
</odoo>