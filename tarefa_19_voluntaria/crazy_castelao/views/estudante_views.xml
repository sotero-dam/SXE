<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_inherit_escola" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.escola</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='category_id']" position="after">
                <field name="acoge_fct"/>
            </xpath>
        </field>
    </record>

    <record id="view_estudante_form" model="ir.ui.view">
        <field name="name">escola.estudante.form</field>
        <field name="model">escola.estudante</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="foto" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <label for="name" string="Nombre Completo"/>
                        <h1><field name="name" placeholder="Ej. Pepe Lento"/></h1>
                    </div>
                    <group>
                        <group string="DATOS ACADÃ‰MICOS">
                            <field name="ciclo"/>
                            <field name="horas_ciclo"/>
                            <field name="progreso_actual" widget="percentpie"/>
                            <field name="horas_aprobadas"/>
                            <field name="nota_media"/>
                            
                            <field name="empresa_id" 
                                   invisible="progreso_actual &lt; 50"/>
                            
                            <field name="tutor_id" 
                                   invisible="progreso_actual &lt; 50 or not empresa_id" 
                                   options="{'no_create': True}"/>
                        </group>
                        
                        <group string="DATOS DEL ALUMNO">
                            <field name="data_nacemento"/>
                            <field name="idade"/>
                            <field name="email"/>
                            <field name="via_acceso" widget="radio"/>
                            <field name="estado" widget="radio" options="{'horizontal': True}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_estudante_kanban" model="ir.ui.view">
        <field name="name">escola.estudante.kanban</field>
        <field name="model">escola.estudante</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click d-flex align-items-center">
                            <div class="o_kanban_image me-3">
                                <field name="foto" widget="image" options="{'size': [100, 100]}"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title"><field name="name"/></strong>
                                <div><field name="ciclo"/></div>
                                <div class="mt-1">
                                    <field name="progreso_actual" widget="progressbar"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_escola_estudante" model="ir.actions.act_window">
        <field name="name">Estudantes</field>
        <field name="res_model">escola.estudante</field>
        <field name="view_mode">list,kanban,form</field>
    </record>

    <menuitem id="menu_escola_root" name="Escola" sequence="10"/>
    <menuitem id="menu_estudante" name="Estudantes" parent="menu_escola_root" action="action_escola_estudante"/>
</odoo>